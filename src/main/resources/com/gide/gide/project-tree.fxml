            fx:controller="com.gide.gide.ProjectTreeController"
            prefHeight="600.0" prefWidth="800.0">
    <center>
        <VBox>
            <TextField fx:id="searchField" promptText="Search..."/>
            <Button text="Refresh" onAction="#refreshTree"/>
            <TreeView fx:id="projectTree"/>
        </VBox>
    </center>
</BorderPane>