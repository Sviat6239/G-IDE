<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gide.gide.MainWindowController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Exit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Undo"/>
                    <MenuItem text="Redo"/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Paste"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <Button text="New"/>
                <Button text="Open"/>
                <Button text="Save"/>
            </ToolBar>
        </VBox>
    </top>
    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Status: "/>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>