<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gide.gide.NewProjectController" hgap="10" vgap="10" alignment="CENTER">
    <Label text="Project Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="projectNameField" promptText="Enter project name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Project Location:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="projectLocationField" promptText="Enter project location" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Browse" onAction="#browseLocation" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button text="Create" onAction="#createProject" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>